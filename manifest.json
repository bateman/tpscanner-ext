{
    "manifest_version": 3,
    "name": "TPScanner",
    "version": "0.2.0",
    "description": "An extension that finds best deals on Trovaprezzi.it",
    "icons": {
        "48": "images/icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.trovaprezzi.it/*",
        "https://trovaprezzi.it/*"
    ],
    "action": {
        "default_icon": "images/icon.png",
        "default_popup": "html/popup.html"
    }
}