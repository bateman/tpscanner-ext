{
    "manifest_version": 3,
    "name": "TPscanner",
    "description": "__MSG_extensionDescription__",
    "version": "1.0.1",
    "default_locale": "en",
    "icons": {
        "48": "images/icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.trovaprezzi.it/*",
        "https://trovaprezzi.it/*"
    ],
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "action": {
        "default_icon": "images/icon.png",
        "default_popup": "html/popup.html"
    }
}